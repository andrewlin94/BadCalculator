{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Catch2",
            "type": "shell",
            "command": "g++",
            "windows":{
                "args": [
                    "Test-main.cpp",
                    "-c",
                    "-o",
                    "Test-main.out",
                    "-std=c++11"
                ]
            },
            "osx": {
                "args": [
                    "Test-main.cpp",
                    "-c",
                    "-o",
                    "Test-main.o",
                    "-std=c++11"
                ]
            }
            
        },
        {
            "label": "Build & Run Calculator",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
               "-g",
                "Operations.cpp",
                "Calculator.cpp",
                "-o",
                "Calculator.out",
                "-std=c++11",
                "&&",
                "Calculator.out"
                ],
            },
            "osx": {
                "command": "g++",
                "args": [
                    "-g",
                    "Operations.cpp",
                    "Calculator.cpp",
                    "-o",
                    "Calculator.o",
                    "-std=c++11",
                    "&&",
                    "./Calculator.o"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Add",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
                    "Test-main.out",
                    "Operations.cpp",
                    "-std=c++11",
                    "-Wall",
                    "-I$(CATCH_SINGLE_INCLUDE)",
                    "Tests-Addition.cpp",
                    "-o",
                    "Tests-Addition.out",
                    "&&",
                    "Tests-Addition.out",
                    "--success"
                ],
            },
            "osx": {
                "command": "g++",
                "args": [
                    "./Test-main.o",
                    "Operations.cpp",
                    "-std=c++11",
                    "-Wall",
                    "Tests-Addition.cpp",
                    "-o",
                    "Tests-Addition.o",
                    "&&",
                    "./Tests-Addition.o",
                    "--success"
                ]
            }
            
        },
        {
            "label": "Test Sub",
            "type": "shell",
            "command": "g++",
            "windows": {
                "args": [
                    "Test-main.out",
                    "Operations.cpp",
                    "-std=c++11",
                    "-Wall",
                    "-I$(CATCH_SINGLE_INCLUDE)",
                    "Tests-Subtraction.cpp",
                    "-o",
                    "Tests-Subtraction.out",
                    "&&",
                    "Tests-Subtraction.out",
                    "--success"
                ],
            },
            "osx": {
                "args": [
                    "./Test-main.o",
                    "Operations.cpp",
                    "-std=c++11",
                    "-Wall",
                    "Tests-Subtraction.cpp",
                    "-o",
                    "Tests-Subtraction.o",
                    "&&",
                    "./Tests-Subtraction.o",
                    "--success"
                ],
            }
            
        }
    ]
}