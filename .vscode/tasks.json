{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Catch2",
            "type": "shell",
            "command": "g++",
            "args": [
                "Test-main.cpp",
                "-c",
                "-o",
                "Test-main.out",
            ]
        },
        {
            "label": "Build Calculator",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "Operations.cpp",
                "-o",
                "Calculator.out",
                "Calculator.cpp",
                "-std=c++11",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test Add",
            "type": "shell",
            "command": "g++",
            "args": [
                "Test-main.out",
                "Operations.cpp",
                "-std=c++11",
                "-Wall",
                "-I$(CATCH_SINGLE_INCLUDE)",
                "-o",
                "Tests-addition.out",
                "Tests-addition.cpp",
                "&&",
                "Tests-addition.out",
                "--success"
            ],
        }
    ]
}